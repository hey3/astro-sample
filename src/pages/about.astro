<style>
  .container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 64px 0;
    color: #efefef;
  }
  .link {
    width: 640px;
    font-size: 16px;
  }
  .imageWrapper {
    width: 640px;
    margin-top: 24px;
  }
  .content {
    width: 640px;
    margin-top: 32px;
  }
  .title {
    font-size: 54px;
    font-weight: bold;
  }
  .text {
    margin-top: 32px;
    font-size: 20px;
  }
</style>
