  <div class="container">
    <a class="link" href="/">‚Üê Home</a>
    <div class="imageWrapper">
      <Avatar />
    </div>
    <div class="content">
      <h1 class="title">About me</h1>
      <div class="text">
        <p>hogehoge</p>
