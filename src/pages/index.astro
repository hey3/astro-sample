---
import Avatar from '../components/Avatar.astro'
import Layout from '../layouts/Layout.astro'
---

<Layout>
  <div class="container">
    <Avatar />
    <div>
      <h1 class="name">hey3</h1>
      <em class="description">Web Front-end Developer</em>
      <p class="bio">React / TypeScript</p>
      <div class="links">
        <a class="about" href="about">About Me</a>
      </div>
    </div>
  </div>
</Layout>
<style>
  .container {
    padding: 64px 0;
    display: flex;
    gap: 40px;
    color: #efefef;
    align-items: center;
    justify-content: center;
  }
  .name {
    font-size: 56px;
    line-height: 1.3;
  }
  .description {
    font-size: 24px;
    color: #a2a2a2;
  }
  .bio {
    font-size: 24px;
    margin-top: 24px;
  }
  .links {
    margin: 16px 0;
    display: flex;
  }
  .about {
    font-size: 24px;
    padding: 8px 12px;
    border: 2px solid #efefef;
    border-radius: 8px;
  }
  .about:hover {
    color: #080808;
    background-color: #efefef;
  }
</style>
